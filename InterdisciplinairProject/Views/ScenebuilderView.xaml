<UserControl x:Class="InterdisciplinairProject.Views.ScenebuilderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Prominent button -->
        <Button x:Name="NewSceneButton"
                Grid.Row="0"
                Content="Nieuwe Scene"
                FontSize="16"
                Padding="12,8"
                HorizontalAlignment="Left"
                Width="180"
                Command="{Binding NewSceneCommand}"
                Background="#FF2D6CDF"
                Foreground="White"
                BorderThickness="0"/>

        <!-- Spacer -->
        <Border Grid.Row="1"/>

        <!-- Overview list (aligned with button) -->
        <Border Grid.Row="2" 
                Background="#FFF" 
                CornerRadius="4" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1"
                HorizontalAlignment="Left"
                Width="{Binding ElementName=NewSceneButton, Path=Width}">
            <DockPanel Margin="8">
                <TextBlock DockPanel.Dock="Top" 
                         Text="Overzicht scenes" 
                         FontWeight="Bold" 
                         Margin="0,0,0,8"/>
                <ListBox ItemsSource="{Binding Scenes}"
                        BorderThickness="0"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding Name}" 
                                     TextWrapping="Wrap"
                                     Padding="6"/>
                                <!-- Delete knop met rood kruis -->
                                <Button Grid.Column="1"
                                        Command="{Binding DataContext.DeleteSceneCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="8"
                                        Margin="4,0,0,0"
                                        Cursor="Hand"
                                        ToolTip="Scene verwijderen"
                                        HorizontalAlignment="Right">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFFFE0E0"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <TextBlock Text="X" 
                                             FontSize="12" 
                                             FontWeight="Bold"
                                             Foreground="#FFD32F2F"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center"/>
                                </Button>
                            </Grid>

                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>