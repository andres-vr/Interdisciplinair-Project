<Window x:Class="InterdisciplinairProject.Views.SceneSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:InterdisciplinairProject.Converters"
        Title="Scene Settings"
        Width="460"
        Height="620"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:PercentageWidthConverter x:Key="PercentageWidthConverter"/>
        
        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#999999"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#0078D4"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsReadOnly" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="BorderBrush" Value="#E81123"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label Style -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
        
        <!-- Error Text Style -->
        <Style x:Key="ErrorText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#E81123"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004578"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#999999"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                    <Setter Property="BorderBrush" Value="#999999"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E5E5E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="0" 
            Margin="0"
            Padding="28">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" 
                            ShadowDepth="2" 
                            Opacity="0.3" 
                            Color="#000000"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Scene Settings" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#222222"
                       Margin="0,0,0,24"/>

            <!-- Form Fields -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Vertical">
                    <!-- Scene ID (Read-only) -->
                    <TextBlock Text="Scene ID" Style="{StaticResource ModernLabel}"/>
                    <TextBox Text="{Binding SceneModel.Id, Mode=OneWay}" 
                             IsReadOnly="True" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,16"/>

                    <!-- Name -->
                    <TextBlock Text="Name *" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="NameTextBox"
                             Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource ErrorText}"
                               Visibility="{Binding (Validation.HasError), ElementName=NameTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=NameTextBox}"
                               Margin="0,4,0,16"/>

                    <!-- Fade In Time -->
                    <TextBlock Text="Fade In Time (ms) *" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="FadeInMsTextBox"
                             Text="{Binding FadeInMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource ErrorText}"
                               Visibility="{Binding (Validation.HasError), ElementName=FadeInMsTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=FadeInMsTextBox}"
                               Margin="0,4,0,16"/>

                    <!-- Duration -->
                    <TextBlock Text="Duration (ms) *" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="DurationMsTextBox"
                             Text="{Binding DurationMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource ErrorText}"
                               Visibility="{Binding (Validation.HasError), ElementName=DurationMsTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=DurationMsTextBox}"
                               Margin="0,4,0,16"/>

                    <!-- Fade Out Time -->
                    <TextBlock Text="Fade Out Time (ms) *" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="FadeOutMsTextBox"
                             Text="{Binding FadeOutMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,0"/>
                    <TextBlock Style="{StaticResource ErrorText}"
                               Visibility="{Binding (Validation.HasError), ElementName=FadeOutMsTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=FadeOutMsTextBox}"
                               Margin="0,4,0,16"/>

                    <!-- Dimmer -->
                    <TextBlock Text="Dimmer (0-255) *" Style="{StaticResource ModernLabel}"/>
                    <TextBox x:Name="DimmerTextBox"
                             Text="{Binding Dimmer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,4"/>
                    <TextBlock Style="{StaticResource ErrorText}"
                               Visibility="{Binding (Validation.HasError), ElementName=DimmerTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"
                               Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=DimmerTextBox}"
                               Margin="0,0,0,8"/>
                    
                    <!-- Dimmer Slider (0-100%) -->
                    <Border x:Name="SliderContainer" Height="40" Margin="0,0,0,16" Background="Transparent">
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="4" ShadowDepth="2" Direction="270"/>
                        </Border.Effect>
                        <Grid Margin="4">
                            <!-- Rectangular border container -->
                            <Border CornerRadius="2" BorderBrush="#E0E0E0" BorderThickness="2" Background="White" ClipToBounds="True">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000" Opacity="0.05" BlurRadius="2" ShadowDepth="1" Direction="90"/>
                                </Border.Effect>

                                <!-- Yellow fill that grows from left inside the container -->
                                <Border x:Name="PART_Fill" HorizontalAlignment="Left" CornerRadius="0">
                                    <Border.Width>
                                        <MultiBinding Converter="{StaticResource PercentageWidthConverter}">
                                            <Binding ElementName="PART_DimmerSlider" Path="Value"/>
                                            <Binding ElementName="PART_DimmerSlider" Path="Minimum"/>
                                            <Binding ElementName="PART_DimmerSlider" Path="Maximum"/>
                                            <Binding ElementName="SliderContainer" Path="ActualWidth"/>
                                        </MultiBinding>
                                    </Border.Width>
                                    <Border.Background>
                                        <LinearGradientBrush x:Name="PART_FillGradient" StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#FFE082" Offset="0"/>
                                            <GradientStop Color="#FFD54F" Offset="0.5"/>
                                            <GradientStop Color="#FFC107" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Border>

                            <Slider x:Name="PART_DimmerSlider"
                                    Orientation="Horizontal"
                                    Minimum="0"
                                    Maximum="100"
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True"
                                    Value="{Binding DimmerSlider, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Margin="0">
                                <Slider.Style>
                                    <Style TargetType="{x:Type Slider}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Slider}">
                                                    <Grid>
                                                        <Border x:Name="TrackBackground" 
                                                                Height="8" 
                                                                CornerRadius="4"
                                                                Background="Transparent"
                                                                BorderBrush="Transparent" 
                                                                BorderThickness="0"/>
                                                        <Track x:Name="PART_Track">
                                                            <Track.DecreaseRepeatButton>
                                                                <RepeatButton Command="Slider.DecreaseLarge">
                                                                    <RepeatButton.Style>
                                                                        <Style TargetType="{x:Type RepeatButton}">
                                                                            <Setter Property="Background" Value="Transparent"/>
                                                                            <Setter Property="BorderThickness" Value="0"/>
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="RepeatButton">
                                                                                        <Border Background="Transparent"/>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </RepeatButton.Style>
                                                                </RepeatButton>
                                                            </Track.DecreaseRepeatButton>
                                                            <Track.IncreaseRepeatButton>
                                                                <RepeatButton Command="Slider.IncreaseLarge">
                                                                    <RepeatButton.Style>
                                                                        <Style TargetType="{x:Type RepeatButton}">
                                                                            <Setter Property="Background" Value="Transparent"/>
                                                                            <Setter Property="BorderThickness" Value="0"/>
                                                                            <Setter Property="Template">
                                                                                <Setter.Value>
                                                                                    <ControlTemplate TargetType="RepeatButton">
                                                                                        <Border Background="Transparent"/>
                                                                                    </ControlTemplate>
                                                                                </Setter.Value>
                                                                            </Setter>
                                                                        </Style>
                                                                    </RepeatButton.Style>
                                                                </RepeatButton>
                                                            </Track.IncreaseRepeatButton>
                                                            <Track.Thumb>
                                                                <Thumb>
                                                                    <Thumb.Template>
                                                                        <ControlTemplate TargetType="{x:Type Thumb}">
                                                                            <Grid>
                                                                                <!-- Thumb background rectangle -->
                                                                                <Rectangle Width="20" Height="32" RadiusX="4" RadiusY="4" Stroke="White" StrokeThickness="2">
                                                                                    <Rectangle.Fill>
                                                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                                                            <GradientStop Color="#42A5F5" Offset="0"/>
                                                                                            <GradientStop Color="#2196F3" Offset="0.5"/>
                                                                                            <GradientStop Color="#1976D2" Offset="1"/>
                                                                                        </LinearGradientBrush>
                                                                                    </Rectangle.Fill>
                                                                                    <Rectangle.Effect>
                                                                                        <DropShadowEffect Color="#1565C0" Opacity="0.6" BlurRadius="8" ShadowDepth="2"/>
                                                                                    </Rectangle.Effect>
                                                                                </Rectangle>
                                                                            </Grid>
                                                                        </ControlTemplate>
                                                                    </Thumb.Template>
                                                                </Thumb>
                                                            </Track.Thumb>
                                                        </Track>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Slider.Style>
                            </Slider>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <StackPanel Grid.Row="2" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Margin="0,24,0,0">
                <Button Content="Cancel" 
                        Width="100" 
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding CancelCommand}"
                        Margin="0,0,10,0"/>
                <Button Content="Save" 
                        Width="100" 
                        Style="{StaticResource PrimaryButton}"
                        Command="{Binding SaveCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
