<UserControl x:Class="InterdisciplinairProject.Views.ShowbuilderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:InterdisciplinairProject.Views"
             xmlns:views="clr-namespace:InterdisciplinairProject.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:viewmodels="clr-namespace:InterdisciplinairProject.ViewModels"
             xmlns:converters="clr-namespace:InterdisciplinairProject.Converters"
             d:DataContext="{d:DesignInstance Type=viewmodels:ShowbuilderViewModel}"
             mc:Ignorable="d"
             Height="auto" Width="auto"
             Background="White">

    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <converters:ProgressToPositionConverter x:Key="ProgressToPositionConverter"/>
        <converters:SceneDurationToWidthConverter x:Key="SceneDurationToWidthConverter"/>
        <converters:BoolToPlayPauseIconConverter x:Key="BoolToPlayPauseIconConverter"/>
        <converters:BoolToPlayPauseTextConverter x:Key="BoolToPlayPauseTextConverter"/>
        
        <!-- ToolBar Tray styling -->
        <SolidColorBrush x:Key="ToolBarTrayBackground" Color="White"/>
        <Style x:Key="ToolBarTrayStyle1" TargetType="{x:Type ToolBarTray}">
            <Setter Property="Background" Value="{StaticResource ToolBarTrayBackground}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Source={x:Static SystemParameters.HighContrast}}" Value="true">
                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- ToolBar style without overflow or gripper -->
        <Style x:Key="ToolBarStyleClean" TargetType="{x:Type ToolBar}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToolBar}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Padding="{TemplateBinding Padding}">
                            <ToolBarPanel IsItemsHost="True"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <!-- Clean toolbar -->
        <ToolBarTray DockPanel.Dock="Top" Style="{StaticResource ToolBarTrayStyle1}" IsLocked="True">
            <ToolBar Style="{StaticResource ToolBarStyleClean}">
                <TextBlock Text="Show Name:" VerticalAlignment="Center" Margin="5,0"/>

                <TextBox Width="150" Text="{Binding CurrentShowName}" Margin="0,0,15,0" VerticalAlignment="Center" Height="21"/>

                <Button Content="Import Scene" Command="{Binding ImportScenesCommand}" Margin="2,0" 
                    Background="#2196F3" BorderBrush="#1976D2" Padding="5,2" Foreground="White"/>
                <Button Content="Import Show" Command="{Binding OpenShowCommand}" Margin="2,0"
                    Background="#2196F3" BorderBrush="#1976D2" Padding="5,2" Foreground="White"/>
                <Button Content="Save" Command="{Binding SaveCommand}" Margin="2,0" 
                    Background="#FF9800" BorderBrush="#F57C00" Padding="5,2" Foreground="White"/>
                <Button Content="Save As" Command="{Binding SaveAsCommand}" Margin="2,0" 
                    Background="#FF9800" BorderBrush="#F57C00" Padding="5,2" Foreground="White"/>
                <Button Content="Create Show" Command="{Binding CreateShowCommand}" Margin="2,0" 
                    Background="#4CAF50" BorderBrush="#388E3C" Padding="5,2" Foreground="White">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="11"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Label Content="{Binding Message}" />               
            </ToolBar>
        </ToolBarTray>

        <!-- Main grid layout -->
        <Grid Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Timeline Area (Top Left White Space) -->
            <Border Grid.Column="0" 
                    Grid.Row="0" 
                    BorderBrush="#B0B0B0" 
                    BorderThickness="2" 
                    Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Timeline Header -->
                    <Border Grid.Row="0" 
                            Background="#2196F3"
                            Height="25"
                            Padding="5,2">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Show timeline" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Timeline Content Area (Placeholder for scenes) -->
                    <ScrollViewer Grid.Row="1" 
                                  HorizontalScrollBarVisibility="Auto" 
                                  VerticalScrollBarVisibility="Auto"
                                  Margin="10">
                        <Border Background="#FAFAFA" 
                                BorderBrush="#DDDDDD" 
                                BorderThickness="1" 
                                CornerRadius="4"
                                MinHeight="150">
                            <Grid>
                                <!-- Placeholder content -->
                                <StackPanel VerticalAlignment="Center" 
                                            HorizontalAlignment="Center"
                                            Opacity="0.5">                                    
                                </StackPanel>

                                  <ListBox x:Name="sceneTimeLineListView"
         Margin="0"
         Grid.Column="0"
         Grid.Row="1"
         ItemsSource="{Binding TimeLineScenes}"
         BorderBrush="Transparent"
         BorderThickness="0"
         Background="Transparent"
         Padding="0"
         SelectionMode="Single"
         HorizontalContentAlignment="Stretch"
         VirtualizingStackPanel.IsVirtualizing="False">
    <i:Interaction.Behaviors>
        <i:FluidMoveBehavior AppliesTo="Children" Duration="0:0:0.2" />
    </i:Interaction.Behaviors>

    <ListBox.ItemsPanel>
        <ItemsPanelTemplate>
            <StackPanel Orientation="Horizontal">
                <i:Interaction.Behaviors>
                    <i:FluidMoveBehavior AppliesTo="Children" Duration="0:0:0.2" />
                </i:Interaction.Behaviors>
            </StackPanel>
        </ItemsPanelTemplate>
    </ListBox.ItemsPanel>

    <ListBox.ItemContainerStyle>
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <!-- Bind ZIndex for overlapping elements -->
            <Setter Property="Panel.ZIndex" Value="{Binding ZIndex}"/>
        </Style>
    </ListBox.ItemContainerStyle>

    <ListBox.ItemTemplate>
        <DataTemplate>
            <!-- Let the Scene item be the DataContext for SceneControl -->
            <views:TimelineScene x:Name="timelinescene" DataContext="{Binding}" />
        </DataTemplate>
    </ListBox.ItemTemplate>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="TimelineSelectionChanged">
            <i:InvokeCommandAction Command="{Binding TimelineSceneSelectionChanged}"
                                   CommandParameter="{Binding SelectedItem, ElementName=sceneTimeLineListView}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
</ListBox>
                                <!-- Progress marker overlay (vertical red line) -->
                                <Canvas Panel.ZIndex="100" VerticalAlignment="Bottom" IsHitTestVisible="False">
                                    <Canvas.Effect>
                                        <DropShadowEffect Color="#000000" Opacity="0.5" BlurRadius="6" ShadowDepth="2"/>
                                    </Canvas.Effect>
                                    <Line X1="0" Y1="0" X2="0" Y2="800" Stroke="Red" StrokeThickness="5">
                                        <Line.RenderTransform>
                                            <TranslateTransform>
                                                <TranslateTransform.X>
                                                    <MultiBinding Converter="{StaticResource ProgressToPositionConverter}">
                                                        <Binding Path="ProgressPosition"/>
                                                        <Binding ElementName="sceneTimeLineListView" Path="ActualWidth"/>
                                                    </MultiBinding>
                                                </TranslateTransform.X>
                                            </TranslateTransform>
                                        </Line.RenderTransform>
                                    </Line>
                                </Canvas>
                                <!-- ItemsControl for timeline scenes can be added here later -->
                            </Grid>
                        </Border>
                    </ScrollViewer>

                    <!-- Timeline Controls -->
                    <Border Grid.Row="2" 
                            Background="#F5F5F5" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="0,1,0,0" 
                            Padding="15,10"
                            CornerRadius="0,0,6,6">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Playback Controls (Left) -->
                            <StackPanel Grid.Column="0" 
                                        Orientation="Horizontal" 
                                        VerticalAlignment="Center">
                                <!-- Play/Pause Toggle Button -->
                                <Button Width="50" 
                                        Height="40" 
                                        Margin="0,0,8,0"
                                        Background="#4CAF50" 
                                        BorderBrush="#388E3C"
                                        BorderThickness="2"
                                        ToolTip="Play/Pause timeline"
                                        Command="{Binding TogglePlayPauseCommand}">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="6"/>
                                        </Style>
                                    </Button.Resources>
                                    <StackPanel>
                                        <TextBlock Text="{Binding IsPlaying, Converter={StaticResource BoolToPlayPauseIconConverter}}" 
                                                   FontSize="16" 
                                                   Foreground="White" 
                                                   HorizontalAlignment="Center"
                                                   Padding="2"
                                                   Margin="0,-2,0,0"/>
                                        <TextBlock Text="{Binding IsPlaying, Converter={StaticResource BoolToPlayPauseTextConverter}}" 
                                                   FontSize="8" 
                                                   Foreground="White" 
                                                   HorizontalAlignment="Center"
                                                   Margin="0,-3,0,0"/>
                                    </StackPanel>
                                </Button>


                                <!-- Stop Button -->
                                <Button Width="50" 
                                        Height="40"
                                        Background="#F44336" 
                                        BorderBrush="#D32F2F"
                                        BorderThickness="2"
                                        ToolTip="Stop timeline"
                                        Command="{Binding StopPlaybackCommand}">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="6"/>
                                        </Style>
                                    </Button.Resources>
                                    <StackPanel>
                                        <TextBlock Text="⏹" 
                                                   FontSize="18" 
                                                   Foreground="White" 
                                                   HorizontalAlignment="Center"
                                                   Padding="2"
                                                   Margin="0,-2,0,0"/>
                                        <TextBlock Text="Stop" 
                                                   FontSize="8" 
                                                   Foreground="White" 
                                                   HorizontalAlignment="Center"
                                                   Margin="0,-3,0,0"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!-- Progress/Time Display (Center) -->
                                <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding CurrentTimeFormatted}" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#333"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text=" / " 
                                       FontSize="14" 
                                   Foreground="#999"
                                   Margin="5,0"
                                   VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalTimeFormatted}" 
                                       FontSize="14" 
                                       Foreground="#666"
                                       VerticalAlignment="Center"/>
                                </StackPanel>

                            <!-- Add Scene Button (Right) -->
                            <Button Grid.Column="2" 
                                    Height="40" 
                                    Padding="15,0"
                                    Background="#2196F3" 
                                    BorderBrush="#1976D2"
                                    BorderThickness="2"
                                    ToolTip="Add scene to timeline"
                                    Command="{Binding AddSceneToTimelineCommand}">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="6"/>
                                    </Style>
                                </Button.Resources>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="➕" 
                                               FontSize="16" 
                                               Foreground="White" 
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="Add Scene" 
                                               FontSize="13" 
                                               FontWeight="SemiBold"
                                               Foreground="White" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- New title + Scene list (stacked) -->
            <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,5,0">
                <!-- New Title: same style as Timeline header -->
                <Border Background="#2196F3"
                        Height="25"
                        Padding="5,2">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Scenes panel"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Scenes list -->
                <ListBox x:Name="sceneListView"
                         Margin="0"
                         ItemsSource="{Binding Scenes}"
                         BorderBrush="#CCC"
                         BorderThickness="1"
                         Background="#FAFAFA"
                         SelectionMode="Extended"
                         HorizontalContentAlignment="Center">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <!-- Let the Scene item be the DataContext for SceneControl -->
                            <views:SceneControl x:Name="scenecontrol" Margin="0" DataContext="{Binding}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding SceneSelectionChangedCommand}"
                                                       CommandParameter="{Binding SelectedItems, ElementName=sceneListView}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </ListBox>
            </StackPanel>

            <GridSplitter Grid.Column="0"
                          Grid.RowSpan="2"
                          Width="5"
                          Background="Gray"
                          ShowsPreview="True" Margin="0,0,0,0" />
            
            <!-- Scene Header and Fixtures Section -->
            <Grid Grid.Column="1" Grid.RowSpan="2" Background="WhiteSmoke">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Scene Header -->
                <Border Grid.Row="0" 
                        Background="#2196F3"
                        Padding="15,10"
                        BorderBrush="#1976D2"
                        BorderThickness="0,0,0,2">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="4" ShadowDepth="2" Direction="270"/>
                    </Border.Effect>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Scene Name -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Selected Scene" 
                                       FontSize="11" 
                                       Foreground="#E3F2FD" 
                                       Margin="0,0,0,2"/>
                            <TextBlock Text="{Binding SelectedScene.Name, FallbackValue='No scene selected'}" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="White"/>
                        </StackPanel>

                        <!-- Settings Button -->
                        <Button Grid.Column="1" 
                                Width="40" 
                                Height="40" 
                                ToolTip="Scene Settings"
                                Command="{Binding OpenSceneSettingsCommand}"
                                CommandParameter="{Binding SelectedScene}"
                                VerticalAlignment="Center"
                                Margin="10,0,0,0">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border x:Name="border" 
                                                        Background="#607D8B" 
                                                        CornerRadius="20" 
                                                        BorderBrush="#546E7A" 
                                                        BorderThickness="1.5">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#000000" 
                                                                        Opacity="0.15" 
                                                                        BlurRadius="6" 
                                                                        ShadowDepth="3" 
                                                                        Direction="270"/>
                                                    </Border.Effect>

                                                    <!-- Gear Icon -->
                                                    <Path Data="M15.95 10.78c.03-.25.05-.51.05-.78s-.02-.53-.06-.78l1.69-1.32c.15-.12.19-.34.1-.51l-1.6-2.77c-.1-.18-.31-.24-.49-.18l-1.99.8c-.42-.32-.86-.58-1.35-.78L12 2.34c-.03-.2-.2-.34-.4-.34H8.4c-.2 0-.36.14-.39.34l-.3 2.12c-.49.2-.94.47-1.35.78l-1.99-.8c-.18-.07-.39 0-.49.18l-1.6 2.77c-.1.18-.06.39.1.51l1.69 1.32c-.04.25-.07.52-.07.78s.02.53.06.78L2.37 12.1c-.15.12-.19.34-.1.51l1.6 2.77c.1.18.31.24.49.18l1.99-.8c.42.32.86.58 1.35.78l.3 2.12c.04.2.2.34.4.34h3.2c.2 0 .37-.14.39-.34l.3-2.12c.49-.2.94-.47 1.35-.78l1.99.8c.18.07.39 0 .49-.18l1.6-2.77c.1-.18.06-.39-.1-.51l-1.67-1.32zM10 13c-1.65 0-3-1.35-3-3s1.35-3 3-3 3 1.35 3 3-1.35 3-3 3z" 
                                                          Fill="White" 
                                                          Stretch="Uniform" 
                                                          Width="20" 
                                                          Height="20"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="#78909C"/>
                                                        <Setter TargetName="border" Property="BorderBrush" Value="#607D8B"/>
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="border" Property="Background" Value="#BDBDBD"/>
                                                        <Setter TargetName="border" Property="BorderBrush" Value="#9E9E9E"/>
                                                        <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!-- Fixtures List with Expandable Channel Details -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl x:Name="fixturesItemsControl"
                                  ItemsSource="{Binding SelectedScene.Fixtures}"
                                  Margin="5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Expandable Fixture Card -->
                                <Expander Margin="5"
                                          Background="White"
                                          BorderBrush="#B0B0B0"
                                          BorderThickness="1">
                                    <Expander.Style>
                                        <Style TargetType="Expander">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Expander">
                                                        <Border CornerRadius="8"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                Background="{TemplateBinding Background}"
                                                                SnapsToDevicePixels="True">
                                                            <DockPanel>
                                                                <!-- Header -->
                                                                <ToggleButton x:Name="HeaderSite"
                                                                              DockPanel.Dock="Top"
                                                                              IsChecked="{Binding Path=IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                              Background="Transparent"
                                                                              BorderThickness="0"
                                                                              Padding="10"
                                                                              HorizontalContentAlignment="Stretch">
                                                                    <ContentPresenter ContentSource="Header"
                                                                                      RecognizesAccessKey="True"/>
                                                                </ToggleButton>
                                                                <!-- Content -->
                                                                <ContentPresenter x:Name="ExpandSite"
                                                                                  DockPanel.Dock="Bottom"
                                                                                  Visibility="Collapsed"
                                                                                  Margin="10,0,10,10"/>
                                                            </DockPanel>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsExpanded" Value="True">
                                                                <Setter TargetName="ExpandSite" Property="Visibility" Value="Visible"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Expander.Style>

                                    <!-- Fixture Header -->
                                    <Expander.Header>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Expand/Collapse Icon -->
                                            <TextBlock Grid.Column="0"
                                                       Text="▶"
                                                       FontSize="12"
                                                       Foreground="#666"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,10,0">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=Expander}}" Value="True">
                                                                <Setter Property="Text" Value="▼"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- Fixture Info -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="15"
                                                           FontWeight="Bold"
                                                           Margin="0,0,0,4"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                                               Text="Fixture ID: "
                                                               FontWeight="SemiBold"
                                                               Foreground="#666"
                                                               FontSize="11"/>
                                                    <TextBlock Grid.Row="0" Grid.Column="1"
                                                               Text="{Binding FixtureId}"
                                                               FontSize="11"
                                                               Margin="5,0,0,0"/>

                                                    <TextBlock Grid.Row="1" Grid.Column="0"
                                                               Text="Instance ID: "
                                                               FontWeight="SemiBold"
                                                               Foreground="#666"
                                                               FontSize="11"/>
                                                    <TextBlock Grid.Row="1" Grid.Column="1"
                                                               Text="{Binding InstanceId}"
                                                               FontSize="11"
                                                               Margin="5,0,0,0"/>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>
                                    </Expander.Header>

                                    <!-- Fixture Channels -->
                                    <Border Background="#FAFAFA"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="10">
                                        <StackPanel>
                                            <!-- Channels Header -->
                                            <TextBlock Text="Channels"
                                                       FontSize="13"
                                                       FontWeight="Bold"
                                                       Foreground="#2196F3"
                                                       Margin="0,0,0,10"/>

                                            <!-- Channel List -->
                                            <ItemsControl ItemsSource="{Binding Channels}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="White"
                                                                BorderBrush="#DDD"
                                                                BorderThickness="1"
                                                                CornerRadius="4"
                                                                Padding="8"
                                                                Margin="0,0,0,8">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>

                                                                <!-- Channel Name & Value -->
                                                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    
                                                                    <TextBlock Grid.Column="0"
                                                                               Text="{Binding Name}"
                                                                               FontWeight="Bold"
                                                                               FontSize="13"
                                                                               VerticalAlignment="Center"/>
                                                                    
                                                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                                        <TextBlock Text="Value: "
                                                                                   FontWeight="SemiBold"
                                                                                   Foreground="#666"
                                                                                   VerticalAlignment="Center"/>
                                                                        <TextBlock Text="{Binding Value}"
                                                                                   FontWeight="Bold"
                                                                                   Foreground="#2196F3"
                                                                                   VerticalAlignment="Center"/>
                                                                    </StackPanel>
                                                                </Grid>

                                                                <!-- Channel Properties -->
                                                                <Grid Grid.Row="1" Margin="0,0,0,8">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <StackPanel Grid.Column="0">
                                                                        <TextBlock Text="Min:" FontSize="10" Foreground="#999"/>
                                                                        <TextBlock Text="{Binding Min}" FontWeight="SemiBold"/>
                                                                    </StackPanel>

                                                                    <StackPanel Grid.Column="1">
                                                                        <TextBlock Text="Max:" FontSize="10" Foreground="#999"/>
                                                                        <TextBlock Text="{Binding Max}" FontWeight="SemiBold"/>
                                                                    </StackPanel>

                                                                    <StackPanel Grid.Column="2">
                                                                        <TextBlock Text="Time (ms):" FontSize="10" Foreground="#999"/>
                                                                        <TextBlock Text="{Binding Time}" FontWeight="SemiBold"/>
                                                                    </StackPanel>
                                                                </Grid>

                                                                <!-- Channel Effect -->
                                                                <Border Grid.Row="2"
                                                                        Background="#F0F0F0"
                                                                        BorderBrush="#CCC"
                                                                        BorderThickness="1"
                                                                        CornerRadius="3"
                                                                        Padding="8">
                                                                    <StackPanel>
                                                                        <Grid Margin="0,0,0,5">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                            </Grid.ColumnDefinitions>
                                                                            
                                                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                                                <TextBlock Text="Channel Effect"
                                                                                           FontWeight="SemiBold"
                                                                                           FontSize="11"/>
                                                                                <TextBlock Text=" - "
                                                                                           FontWeight="Normal"
                                                                                           FontSize="11"
                                                                                           Foreground="#666"
                                                                                           Margin="5,0"/>
                                                                                <TextBlock Text="{Binding ChannelEffect.EffectType}"
                                                                                           FontWeight="SemiBold"
                                                                                           FontSize="11"
                                                                                           Foreground="#2196F3"/>
                                                                            </StackPanel>
                                                                            
                                                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                                                <TextBlock Text="Enabled: "
                                                                                           FontSize="10"
                                                                                           Foreground="#666"
                                                                                           VerticalAlignment="Center"/>
                                                                                <TextBlock Text="{Binding ChannelEffect.Enabled}"
                                                                                           FontSize="10"
                                                                                           FontWeight="Bold"
                                                                                           VerticalAlignment="Center">
                                                                                    <TextBlock.Style>
                                                                                        <Style TargetType="TextBlock">
                                                                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                                                                            <Style.Triggers>
                                                                                                <DataTrigger Binding="{Binding ChannelEffect.Enabled}" Value="False">
                                                                                                    <Setter Property="Foreground" Value="#F44336"/>
                                                                                                </DataTrigger>
                                                                                            </Style.Triggers>
                                                                                        </Style>
                                                                                    </TextBlock.Style>
                                                                                </TextBlock>
                                                                            </StackPanel>
                                                                        </Grid>

                                                                        <!-- Effect Details (only shown when enabled) -->
                                                                        <StackPanel Visibility="{Binding ChannelEffect.Enabled, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                            <!-- Effect Parameters -->
                                                                            <ItemsControl ItemsSource="{Binding ChannelEffect.Parameters}"
                                                                                          Margin="0,5,0,0">
                                                                                <ItemsControl.ItemTemplate>
                                                                                    <DataTemplate>
                                                                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                                                                            <TextBlock Text="{Binding Key}" FontSize="9" Foreground="#666"/>
                                                                                            <TextBlock Text=": " FontSize="9" Foreground="#666"/>
                                                                                            <TextBlock Text="{Binding Value}" FontSize="9" FontWeight="SemiBold"/>
                                                                                        </StackPanel>
                                                                                    </DataTemplate>
                                                                                </ItemsControl.ItemTemplate>
                                                                            </ItemsControl>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Border>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Grid>
    </DockPanel>
</UserControl>
