<Window x:Class="InterdiscplinairProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterdiscplinairProject"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="450" Width="800">
    <Grid>
        <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Fixture">
            </MenuItem>
            <MenuItem Header="_Scene">
                <MenuItem Header="_Import Scenes" />
            </MenuItem>
            <MenuItem Header="_Show">
                <MenuItem Header="_Open Showbuilder" />
                <MenuItem Header="_Import Show" />
                <MenuItem Header="_Save as..." />
                <MenuItem Header="_Save" />
            </MenuItem>
        </Menu>
        <TextBox AcceptsReturn="True" />
    </DockPanel>
    <TextBlock Text="{Binding Title}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" />
    </Grid>
</Window>
