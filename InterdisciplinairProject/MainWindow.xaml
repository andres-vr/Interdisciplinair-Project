<Window x:Class="InterdiscplinairProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterdiscplinairProject"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="450" Width="800">

    <DockPanel>
        <!-- Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Fixture"/>
            <MenuItem Header="_Scene">
                <MenuItem Header="_Import Scenes" Command="{Binding ImportScenesCommand}"/>
            </MenuItem>
            <MenuItem Header="_Show">
                <MenuItem Header="_Open Showbuilder"/>
                <MenuItem Header="_Import Show"/>
                <MenuItem Header="_Save as..."/>
                <MenuItem Header="_Save"/>
            </MenuItem>
        </Menu>

        <!-- Hoofdinhoud -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Titel -->
                <RowDefinition Height="*"/>
                <!-- Bestaande ListView -->
                <RowDefinition Height="Auto"/>
                <!-- Titel voor nieuwe ListView -->
                <RowDefinition Height="2*"/>
                <!-- Nieuwe ListView -->
            </Grid.RowDefinitions>

            <!-- Titel -->
            <TextBlock Text="{Binding Title}" 
                       FontSize="18" 
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20" />

            <!-- BESTAANDE LISTVIEW -->
            <ListView x:Name="fixtureListView"
                      Grid.Row="1"
                      Margin="10"
                      BorderBrush="#DDD"
                      BorderThickness="1"
                      Background="#FAFAFA">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Fixture Name" Width="200" DisplayMemberBinding="{Binding FixtureName}" />
                        <GridViewColumn Header="Type" Width="150" DisplayMemberBinding="{Binding Type}" />
                        <GridViewColumn Header="Channel" Width="100" DisplayMemberBinding="{Binding Channel}" />
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Titel voor nieuwe sectie -->
            <TextBlock Text="Imported Scenes"
                       Grid.Row="2"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="10,20,0,5"
                       Foreground="#333" />

            <!-- NIEUWE LISTVIEW voor geïmporteerde scenes -->
            <ListView x:Name="sceneListView"
                      Grid.Row="3"
                      ItemsSource="{Binding Scenes}"
                      Margin="10"
                      BorderBrush="#CCC"
                      BorderThickness="1"
                      Background="#FAFAFA">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="ID" Width="150" DisplayMemberBinding="{Binding Id}" />
                        <GridViewColumn Header="Dimmer" Width="100" DisplayMemberBinding="{Binding Dimmer}" />
                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>
    </DockPanel>
</Window>
